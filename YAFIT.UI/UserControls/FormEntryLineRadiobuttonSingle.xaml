<UserControl x:Class="YAFIT.UI.UserControls.FormEntryLineRadiobuttonSingle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YAFIT.UI.UserControls">
    <Border BorderBrush="Black" BorderThickness="0,0,0,0" >



        <Grid  x:Name="ButtonGrid" Margin="5" Width="190">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical"  >
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                             VerticalAlignment="Center" HorizontalAlignment="Center" 
                             IsChecked="{Binding Selection[4]}"/>
                


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                 VerticalAlignment="Center" HorizontalAlignment="Center" 
                 IsChecked="{Binding Selection[3]}"/>
               


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                IsChecked="{Binding Selection[2]}"/>
               


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="3">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                 IsChecked="{Binding Selection[1]}"/>
                


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="4">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                IsChecked="{Binding Selection[0]}"/>
                


            </StackPanel>


        </Grid>


    </Border>
</UserControl>
