<UserControl x:Class="YAFIT.UI.UserControls.FormEntryLineRadiobuttonSingle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YAFIT.UI.UserControls"
               d:DesignHeight="40" d:DesignWidth="150">
    <Border BorderBrush="Black" BorderThickness="1,1,1,1" Background="White">



        <Grid  x:Name="ButtonGrid" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical"  >
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                             VerticalAlignment="Center" HorizontalAlignment="Center" 
                             IsChecked="{Binding Selection[4]}"/>
                <TextBlock  Text="5" HorizontalAlignment="Center"/>


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                 VerticalAlignment="Center" HorizontalAlignment="Center" 
                 IsChecked="{Binding Selection[3]}"/>
                <TextBlock  Text="4" HorizontalAlignment="Center"/>


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                IsChecked="{Binding Selection[2]}"/>
                <TextBlock  Text="3" HorizontalAlignment="Center"/>


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="3">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                 IsChecked="{Binding Selection[1]}"/>
                <TextBlock  Text="2" HorizontalAlignment="Center"/>


            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="4">
                <RadioButton GroupName = "{Binding RandomGroup, Mode=OneWay}"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                IsChecked="{Binding Selection[0]}"/>
                <TextBlock  Text="1" HorizontalAlignment="Center"/>


            </StackPanel>

            
        </Grid>


    </Border>
</UserControl>
